{
    "name": "picoDeploy",
    "description": "An Ionic project",
    "version": "0.0.1",
    "author": "Ionic Framework",
    "homepage": "http://ionicframework.com/",
    "private": true,
    "main": "main.js",
    "scripts": {
        "clean": "ionic-app-scripts clean",
        "lint": "ionic-app-scripts lint",
        "cart": "cp -r cart www/",
        "build": "npm run ionic:build",
        "serve": "npm run ionic:serve",
        "ionic:build": "npm run cart && ionic-app-scripts build",
        "ionic:serve": "npm run cart &&  ionic-app-scripts serve",
        "android:run": "npm run cart && ionic cordova run android --prod",
        "android:serve": "npm run cart && ionic cordova run android --prod --livereload --consolelogs",
        "android:build": "npm run cart && ionic cordova build android --prod --release",
        "electron:build": "export DEV=\"false\" && npm run cart &&  npm run ionic:build --prod && electron-builder",
        "electron:serve": "export DEV=\"true\" && npm run cart &&  npm run ionic:build --prod && ./node_modules/.bin/electron .",
        "electron:pack": "npm run cart &&  npm run ionic:build --prod && electron-builder --dir"
    },
    "build": {
        "appId": "com.example.picoDeploy",
        "productName": "picoDeploy",
        "directories": {
            "buildResources": "resources"
        },
        "mac": {
            "category": "public.app-category.games"
        }
    },
    "dependencies": {
        "@angular/common": "4.1.3",
        "@angular/compiler": "4.1.3",
        "@angular/compiler-cli": "4.1.3",
        "@angular/core": "4.1.3",
        "@angular/forms": "4.1.3",
        "@angular/http": "4.1.3",
        "@angular/platform-browser": "4.1.3",
        "@angular/platform-browser-dynamic": "4.1.3",
        "@ionic-native/core": "3.12.1",
        "@ionic-native/screen-orientation": "^4.2.1",
        "@ionic-native/splash-screen": "3.12.1",
        "@ionic-native/status-bar": "3.12.1",
        "@ionic/storage": "^2.0.1",
        "angular2-expandable-list": "^0.5.0",
        "buffer": "^5.0.8",
        "cordova-android": "^6.2.3",
        "cordova-plugin-console": "^1.0.5",
        "cordova-plugin-crosswalk-webview": "^2.3.0",
        "cordova-plugin-device": "^1.1.4",
        "cordova-plugin-screen-orientation": "^2.0.1",
        "cordova-plugin-splashscreen": "^4.0.3",
        "cordova-plugin-statusbar": "^2.2.2",
        "cordova-plugin-whitelist": "^1.3.1",
        "cordova-sqlite-storage": "^2.0.4",
        "es6-promise-plugin": "git+https://github.com/vstirbu/PromisesPlugin.git",
        "game-controller": "0.0.1",
        "idb": "^2.0.4",
        "ionic-angular": "3.6.1",
        "ionic-plugin-keyboard": "^2.2.1",
        "ionicons": "3.0.0",
        "ngx-color-picker": "^4.3.3",
        "rxjs": "5.4.0",
        "sass-media-queries": "^1.0.3",
        "sass-theme-defaults": "^1.0.2",
        "sw-toolbox": "3.6.0",
        "zone.js": "0.8.12"
    },
    "devDependencies": {
        "@ionic/app-scripts": "2.1.4",
        "electron": "^1.7.6",
        "electron-builder": "^19.30.4",
        "typescript": "2.3.4"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-console": {},
            "cordova-plugin-device": {},
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-statusbar": {},
            "cordova-plugin-whitelist": {},
            "ionic-plugin-keyboard": {},
            "cordova-plugin-screen-orientation": {},
            "cordova-sqlite-storage": {},
            "cordova-plugin-crosswalk-webview": {
                "XWALK_VERSION": "23+",
                "XWALK_LITEVERSION": "xwalk_core_library_canary:17+",
                "XWALK_COMMANDLINE": "--disable-pull-to-refresh-effect",
                "XWALK_MODE": "embedded",
                "XWALK_MULTIPLEAPK": "true"
            }
        },
        "platforms": [
            "android"
        ]
    }
}
